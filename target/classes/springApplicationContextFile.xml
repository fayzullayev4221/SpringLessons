<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

        <context:property-placeholder   location="classBeanVariablesExternalFile.properties"/>


        <bean id="classicalMusic"
              class="src.ClassicalMusic">
        </bean>

        <bean id="rapMusic"
              class="src.RapMusic">
        </bean>

        <bean id="popMusic"
              class="src.PopMusic">
        </bean>

        <bean id="retroMusic"
              class="src.RetroMusic">
        </bean>

        <bean id="musicPlayerConst"
              class="src.MusicPlayer">
              <constructor-arg ref="rapMusic"/>
        </bean>

        <bean id="musicPlayerSetter"
              class="src.MusicPlayer">
        <property name="music" ref="retroMusic"/>
        <property name="volume" value="${musicPlayer.volume}"/>
        </bean>

        <bean id="init-destroy-singleton"
              class="src.ClassicalMusic"
              init-method="doMyInit"
              destroy-method="doMyDestroy">
        </bean>

        <bean id="init-destroy-prototype"
              class="src.RapMusic"
              init-method="doMyInit"
              destroy-method="doMyDestroy"
              scope="prototype">
        </bean>

        <bean id="factory-method"
              class="src.PopMusic"
              scope="prototype"
              factory-method="getInstance"
              init-method="doMyInit"
              destroy-method="doMyDestroy">
        </bean>

</beans>